generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid()) @map("_id")
  fullName  String
  email     String   @unique
  password  String
  Room      Room     @relation(fields: [rooms], references: [id])
  rooms     String[]
  createdAt DateTime
  updatedAt DateTime

  @@map("user")
}

model RefreshToken {
  id        String   @id @default(uuid()) @map("_id")
  userId    String
  expiresIn Int
  createdAt DateTime

  @@map("refresh_token")
}

model Room {
  id        String   @id @default(uuid()) @map("_id")
  name      String
  tasks     Task[]
  users     User[]
  createdAt DateTime
  updatedAt DateTime

  @@map("room")
}

model Task {
  id        String   @id @default(uuid()) @map("_id")
  message   String
  room      Room     @relation(fields: [roomId], references: [id])
  roomId    String
  createdAt DateTime
  updatedAt DateTime

  @@map("task")
}
