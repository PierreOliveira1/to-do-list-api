generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id @default(uuid()) @map("_id")
  fullName String
  email    String     @unique
  password String
  toDoList ToDoList[]
}

model RefreshToken {
  id        String @id @default(uuid()) @map("_id")
  userId    String
  expiresIn Int
}

model ToDoList {
  id      String @id @default(uuid()) @map("_id")
  message String
  User    User   @relation(fields: [userId], references: [id])
  userId  String
}
